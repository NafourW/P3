                        <Label layoutX="10.0" layoutY="17.0" text="%label_ware_width" GridPane.rowIndex="2" />
                        <Label layoutX="10.0" layoutY="17.0" text="%label_ware_height" GridPane.rowIndex="3" />
                        <Label layoutX="10.0" layoutY="17.0" text="%label_ware_weight" GridPane.rowIndex="4" />
                        <TextField fx:id="wareNumberField" GridPane.columnIndex="1" />
                        <TextField fx:id="lengthField" layoutX="10.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="widthField" layoutX="10.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="heightField" layoutX="10.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <TextField fx:id="weightField" layoutX="10.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
            <VBox minWidth="250.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox prefHeight="200.0">
                     <children>
                        <VBox minWidth="250.0">
                           <children>
                              <GridPane>
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <VBox.margin>
                                    <Insets bottom="30.0" />
                                 </VBox.margin>
                                 <children>
                                    <Label text="%label_order_category" GridPane.rowIndex="2" />
                                    <Label layoutX="10.0" layoutY="17.0" text="%label_order_date" />
                                    <ComboBox fx:id="orderCategoryComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" />
                                    <Label text="%label_order_region" GridPane.rowIndex="1" />
                                    <ComboBox fx:id="regionComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 </children>
                              </GridPane>
                              <GridPane>
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
