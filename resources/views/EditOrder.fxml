                                    <TextField fx:id="priceField" layoutX="10.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="20.0" />
                                 </VBox.margin>
                              </GridPane>
                           </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="%label_order_additional_comments" />
                              <TextArea fx:id="commentsArea" maxWidth="400.0">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </TextArea>
                           </children>
                           <HBox.margin>
                              <Insets left="40.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
                  <Label text="%label_order_wares_on_order" />
                  <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <TableView fx:id="orderLineTable" prefHeight="200.0" prefWidth="200.0">
                           <columns>
                              <TableColumn fx:id="WareName" prefWidth="73.0" text="Varenavn" />
                              <TableColumn fx:id="WareNumber" prefWidth="72.0" text="Varenummer" />
                              <TableColumn fx:id="Individual" prefWidth="56.0" text="Individ" />
                              <TableColumn fx:id="IndividualNumber" prefWidth="132.0" text="Individ varenummer" />
                              <TableColumn fx:id="Model" prefWidth="667.0" text="Model" />
                              <TableColumn fx:id="FullName" prefWidth="200.0" text="Fuldt Navn" />
                              <TableColumn fx:id="Labels" prefWidth="60.0" text="Labels" />
                              <TableColumn fx:id="Delivered" prefWidth="60.0" text="Leveret" />
                              <TableColumn fx:id="MoveTime" prefWidth="60.0" text="Flytte tid" />
                              <TableColumn fx:id="LiftAlone" prefWidth="60.0" text="Løft alene" />
                              <TableColumn fx:id="LiftEquipment" prefWidth="75.0" text="Løftanordning" />
                           </columns>
                        </TableView>
                     </content>
                  </ScrollPane>
                  <HBox VBox.vgrow="NEVER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addWareToOrderButtonAction" prefHeight="40.0" prefWidth="120.0" text="%button_add_ware_to_order">
                           <HBox.margin>
                              <Insets right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="removeWareButton" mnemonicParsing="false" onAction="#removeWareButtonAction" prefHeight="40.0" prefWidth="120.0" text="%button_remove_ware">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <HBox fx:id="buttonBar" alignment="BOTTOM_RIGHT" minHeight="50.0">
         <children>
            <VBox fx:id="buttonBarLeft" alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="cancelOrderButton" mnemonicParsing="false" onAction="#cancelOrderButtonAction" prefHeight="50.0" prefWidth="120.0" styleClass="button-red" text="%button_cancel_order" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#viewWareListButtonAction" prefHeight="50.0" prefWidth="120.0" text="%button_view_ware_list" />
            <Button fx:id="addOrderButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#addOrderButtonAction" prefHeight="50.0" prefWidth="120.0" text="%button_add_order">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="doneButton" layoutX="540.0" layoutY="10.0" mnemonicParsing="false" onAction="#doneButtonAction" prefHeight="50.0" prefWidth="120.0" text="%button_done">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="62.0" layoutY="10.0" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="50.0" prefWidth="120.0" text="%button_back">
               <HBox.margin>
