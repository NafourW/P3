                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="%label_ware_type" />
                        <ComboBox fx:id="searchNameComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <ComboBox fx:id="wareTypeComboBox" prefWidth="150.0" GridPane.columnIndex="1" />
                        <Label layoutX="10.0" layoutY="17.0" text="%label_ware_search_name" GridPane.rowIndex="1" />
                        <Label layoutX="10.0" layoutY="17.0" text="%label_ware_name" GridPane.rowIndex="2" />
                        <Label layoutX="10.0" layoutY="17.0" text="%label_ware_supplier" GridPane.rowIndex="3" />
                        <TextField fx:id="wareNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="supplierField" layoutX="110.0" layoutY="73.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </GridPane>
                  <GridPane layoutX="10.0" layoutY="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="%label_ware_number" />
