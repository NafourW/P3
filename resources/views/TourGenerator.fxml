<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.aau.cs.ds308e18.gui.controllers.TourGeneratorController">
   <children>
      <Label text="%label_tourgen_configuration">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox>
         <children>
            <Label prefHeight="25.0" prefWidth="100.0" text="%label_tourgen_planning">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ChoiceBox prefHeight="25.0" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox layoutX="10.0" layoutY="27.0">
         <children>
            <Label prefHeight="25.0" prefWidth="100.0" text="%label_tourgen_region">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="regionChoiceBox" prefWidth="150.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ChoiceBox>
            <CheckBox fx:id="allRegionsCheckBox" mnemonicParsing="false" onAction="#allRegionsCheckBoxAction" prefHeight="25.0" text="%label_tourgen_all_regions" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox layoutX="20.0" layoutY="120.0">
         <children>
            <Label prefHeight="25.0" prefWidth="100.0" text="%label_tourgen_date">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <DatePicker fx:id="datePicker" prefWidth="150.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </DatePicker>
            <CheckBox fx:id="allDatesCheckBox" layoutX="280.0" layoutY="10.0" mnemonicParsing="false" onAction="#allDatesCheckBoxAction" prefHeight="25.0" text="%label_tourgen_all_dates" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" layoutX="10.0" layoutY="127.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#generateToursButtonAction" prefHeight="50.0" prefWidth="120.0" text="%button_generate_tours">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button layoutX="558.0" layoutY="168.0" mnemonicParsing="false" onAction="#cancelButtonAction" prefHeight="50.0" prefWidth="120.0" text="%button_cancel">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
